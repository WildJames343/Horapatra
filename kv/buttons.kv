#:kivy 1.0.9

<WriteJobButton>:
	text: 'Commit Job to File'
    size_hint_y: None
    height: 30
    size_hint_x: None
    width: 200

<NewExpButton>:
    size_hint_y: None
    size_hint_x: None
    height: 30
    width: 200
    text: 'Add new Experiment'

<NewTaskButton>:
    size_hint_y: None
    size_hint_x: None
    height: 30
    width: 200
    text: 'Add New Task'

<ExpButton>:
    exp_name: ''
    text_size: (None, 20)
    size: self.texture_size
    on_release: root.remove_experiment()

<JobButton>
    job_name: 0
    text_size: (None, 20)
    size: self.texture_size
    background_normal: ''
    background_color: (.45,.45,.45, 1)
    on_release: self.remove_job()

<ActiveLabel>:
    text_size: (None, self.height)
    size: self.texture_size
    halign: 'center'
    valign: 'center'
    background_normal: ''
    background_color: (.5,.5,.5, 0)
    canvas.before:
        Color:
            rgb: .5,.5,.5
        Rectangle:
            size: self.width - 4, self.height - 4
            pos: self.x + 2, self.y + 2
    on_release: self.verify()

<ExperimentButton>:
    text_size: (None, self.height)
    size: self.texture_size
    halign: 'center'
    valign: 'center'
    background_normal: ''
    background_color: (.5,.5,.5, 0)
    canvas.before:
        Color:
            rgb: .5,.5,.5
        Rectangle:
            size: self.width - 4, self.height - 4
            pos: self.x + 2, self.y + 2
    on_release: self.preview_experiment()


